<selector xmlns:android="http://schemas.android.com/apk/res/android">

<!-- Pressionado -->
<item android:state_pressed="true">
    <shape>
        <solid android:color="@color/global" /> <!-- Cor de fundo quando pressionado -->
        <corners android:radius="20dp" />
    </shape>
</item>


<item>
    <shape>
        <solid android:color="@color/white" />
        <corners android:radius="20dp" />
        <stroke
            android:width="1dp"
            android:color="@color/global" />
    </shape>
</item>
</selector>

