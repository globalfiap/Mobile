<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado pressionado -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/global" /> <!-- Cor ao pressionar -->
            <corners android:radius="25dp" /> <!-- Bordas arredondadas -->
            <stroke android:width="2dp" android:color="@color/white" /> <!-- Borda branca -->
        </shape>
    </item>

    <!-- Estado normal -->
    <item>
        <shape>
            <solid android:color="@color/white" /> <!-- Cor padrÃ£o -->
            <corners android:radius="25dp" /> <!-- Bordas arredondadas -->
            <stroke android:width="2dp" android:color="@color/global" /> <!-- Borda verde -->
        </shape>
    </item>
</selector>
